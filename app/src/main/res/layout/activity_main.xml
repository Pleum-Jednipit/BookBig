<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#Fbc996">

        <Button
            android:layout_width="58dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:background="@drawable/info"
            android:onClick="goToUserInfo" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/bookbig" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="goToHiFive"
            android:text="Hi Five!" />

    </LinearLayout>

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:background="@android:color/white"
        app:rotation_degrees="15.5"
        tools:context=".MyActivity">

    </com.lorentzos.flingswipe.SwipeFlingAdapterView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="5dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/button2"
            android:layout_width="14dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/openbook" />

        <Button
            android:id="@+id/button"
            android:layout_width="5dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/highfive" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/discoveryLayout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/discoveryText"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="There is no book around you.Expand you book discovery setting to read more book!"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Here" />

        <Button
            android:id="@+id/discoveryButton"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Discovery Setting"
            android:visibility="invisible" />

    </LinearLayout>


</LinearLayout>